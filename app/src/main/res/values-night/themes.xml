<resources>
    <!-- Base application theme. -->
    <style name="Theme.Wallies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:statusBarColor">@color/primary_purple_20</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="fontFamily">@font/googlesansmedium</item>
        <item name="itemTextColor">@color/light_gray</item>
        <item name="iconTint">@color/light_gray</item>
    </style>

    <style name="AppBar" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@color/background_tab</item>
    </style>

    <style name="ToolbarTitleText" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/googlesansmedium</item>
    </style>


    <style name="Title1Medium" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/googlesansmedium</item>
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:lineSpacingExtra">@dimen/dp_4</item>
        <item name="android:fontFeatureSettings">pnum</item>
    </style>

    <style name="MaterialChips" parent="@style/Widget.MaterialComponents.Chip.Action">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="android:textAppearance">@style/DetailText</item>
    </style>

    <style name="AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/background_dark</item>
        <item name="android:bottomLeftRadius">@dimen/dp_20</item>
        <item name="android:bottomRightRadius">@dimen/dp_20</item>
        <item name="android:topLeftRadius">@dimen/dp_20</item>
        <item name="android:topRightRadius">@dimen/dp_20</item>
    </style>

    <style name="DialogButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/googlesansmedium</item>
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
    </style>

    <style name="BaseButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/googlesansmedium</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="textAllCaps">false</item>
        <item name="android:clickable">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AuthButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/background_app_icon</item>
        <item name="android:background">@drawable/bg_ripple_dark</item>
        <item name="android:fontFamily">@font/googlesansmedium</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/white</item>
        <item name="paddingStart">@dimen/dp_16</item>
        <item name="paddingEnd">@dimen/dp_16</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>
    </style>

    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="CustomCardCorners" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/dp_16</item>
        <item name="cornerSizeTopRight">@dimen/dp_16</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="DialogTitleText" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/googlesansmedium</item>
    </style>
    <style name="DialogText" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/googlesansregular</item>
    </style>

    <style name="Tab.Background" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@drawable/bg_tab</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">@color/orange</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabGravity">center</item>
        <item name="rippleColor">@null</item>
        <item name="tabSelectedTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/Tab</item>
        <item name="tabTextColor">@color/orange</item>
    </style>

    <style name="EditTextSearch">
        <item name="android:background">@drawable/bg_default_edit_text_search</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/text_gray</item>
        <item name="android:drawableLeft">@drawable/search</item>
        <item name="android:drawablePadding">@dimen/dp_12</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ActionBarTextAppearance" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:fontFamily">@font/googlesansmedium</item>
    </style>

    <style name="LoginTextInputInnerFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MainText" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/googlesansregular</item>
    </style>

    <style name="ProfileText" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/googlesansregular</item>
    </style>

    <style name="ProfileMainText" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/googlesansregular</item>
    </style>

    <style name="LoginTitleText" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/googlesansbold</item>
    </style>

    <style name="LoginSubTitleText" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/googlesansbold</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/googlesansmedium</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:lineSpacingExtra">@dimen/dp_2</item>
        <item name="android:letterSpacing">@dimen/letter_spacing_call_out</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="android:paddingTop">@dimen/dp_14</item>
        <item name="android:paddingBottom">@dimen/dp_14</item>
        <item name="android:textColorHint">@color/text_gray</item>
    </style>

    <style name="DetailText" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/googlesansmedium</item>
    </style>

</resources>